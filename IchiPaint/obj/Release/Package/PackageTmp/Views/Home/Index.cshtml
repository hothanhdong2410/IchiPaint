@using IchiPaint.Helpers
@model IchiPaint.Models.IndexPortal

@{
    var lstNews = Model.LstNews;
    var lstProject = Model.LstProject;

    var baseUrl = "tin-tuc/{0}/{1}";

    var urlSpecial = string.Format(baseUrl, lstNews.Collection[0].Id, HtmlControllHelpers.ReplaceUnicodeUrl(lstNews.Collection[0].Title));

    var count = 0;
}
<style>
    .item_inner {
        text-align: center;
    }

        .item_inner .item_title {
            display: block;
            font-weight: bold;
        }
</style>
<div id="wrap-slideshow">
    <div class="bg-slide" style="background-image: url(/Content/Images/Banner/banner-001.jpg);"></div>
    <div id="slideshow" class="single-slide owl-carousel s-dots s-nav s-auto s-loop">
        <div class="item bg-lazy" data-src="/Content/Images/Banner/banner-001.jpg"> </div>
        <div class="item bg-lazy" data-src="/Content/Images/Banner/banner-002.jpg"> </div>
        <div class="item bg-lazy" data-src="/Content/Images/Banner/banner-003.jpg"> </div>
        <div class="item bg-lazy" data-src="/Content/Images/Banner/banner-004.jpg"> </div>
        <div class="item bg-lazy" data-src="/Content/Images/Banner/banner-005.jpg"> </div>
    </div>
</div>

<section class="TOA014 row-2 mb-bg-primary bg-loaded" style="background-image: url(/Content/Images/Banner/banner-014.jpg)">
    <div class="container">
        <div class="row block ">
            <div class="col-md-4 col-md-offset-7 block_text">
                <div class="display-table ">
                    <div class="table-cell">
                        <h2 class="block_title color-thirdary ">
                            HỆ THỐNG
                            <br>
                            SẢN PHẨM
                        </h2>
                        <div class="block_decs">
                            Cập nhật các sản phẩm tiêu biểu của hệ thống sản phẩm Ichi.
                            &ensp;
                        </div>

                        <div class="block_decs">
                            &ensp;
                        </div>

                        <div class="div-two-btn">
                            <a class="btn btn-thirdary " href="/san-pham/son-noi-that.htm">
                                <span class="inner">
                                    Nội thất
                                </span>
                            </a>

                            <a class="btn btn-thirdary " href="/san-pham/son-ngoai-that.htm">
                                <span class="inner">
                                    Ngoại thất
                                </span>
                            </a>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<section class="TOA014 row-2 mb-bg-primary bg-loaded" style="background-image: url(/Content/Images/Banner/banner-007.jpg)">
    <div class="container">
        <div class="row block ">
            <div class="col-md-4 col-md-offset-7 block_text">
                <div class="display-table ">
                    <div class="table-cell">
                        <h2 class="block_title color-thirdary ">
                            TƯ VẤN
                            <br>
                            MÀU SẮC
                        </h2>
                        <div class="block_decs">
                            Chuyên mục cập nhật các xu hướng màu sắc mới cùng những phong cách thiết kế trên toàn thế giới. Với các bài viết này, hy vọng ICHI sẽ truyền cảm hứng cho bạn tạo ra câu chuyện riêng trong hành trình thiết kế tổ ấm thân yêu của mình.
                        </div>

                        <div class="div-two-btn">
                            <a class="btn btn-thirdary " href="/dich-vu/xem-mau-phong-thuy.htm">
                                <span class="inner">
                                    Phong thủy
                                </span>
                            </a>

                            <a class="btn btn-thirdary " href="/dich-vu/kho-du-lieu-phoi-mau.htm">
                                <span class="inner">
                                    Kho màu
                                </span>
                            </a>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>
</section>



<section class="TOA013">
    <div class="container">
        <div class="section-header">
            <h2 class="section-title"> Tin tức nổi bật </h2>
        </div>
        <div class="page-list-news">
            <div class="feature-post block-3">
                <div class="item">
                    <a href="@urlSpecial" class="item_img">
                        <img src="@lstNews.Collection[0].FeatureImage" alt="@lstNews.Collection[0].Title">
                    </a>
                    <div class="item_content">
                        <a href="@urlSpecial" class="item_title">
                            @lstNews.Collection[0].Title
                        </a>
                        <div class="item_decs">
                            @lstNews.Collection[0].Description
                        </div>
                        <a href="@urlSpecial" class="btn  btn-primary">
                            <span class="inner">Xem thêm</span>
                        </a>
                    </div>
                </div>
            </div>
            <div class="row block-1">

                @for (int i = 1; i < lstNews.Collection.Count; i++)
                {
                    var singleUrl = string.Format(baseUrl, lstNews.Collection[i].Id, HtmlControllHelpers.ReplaceUnicodeUrl(lstNews.Collection[i].Title));
                    <div class="col-sm-4 col-md-4">
                        <div class="item">
                            <a href="@singleUrl" class="item_img">
                                <img src="@lstNews.Collection[i].FeatureImage" alt="@lstNews.Collection[i].Title">
                            </a>
                            <div class="item_content">
                                <p class="item_date">@lstNews.Collection[i].CreateDate.Substring(0, 10)</p>
                                <a href="@singleUrl" class="item_title">
                                    @lstNews.Collection[i].Title
                                </a>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</section>
<section class="project">
    <div class="container">
        <div class="section-header">
            <h2 class="section-title"> Công trình tiêu biểu </h2>
        </div>
        <div class="page-list-news">
            <div class="row block-1">
                @foreach (var item in lstProject.Collection)
                {
                    count++;
                    if (count <= 3)
                    {
                        <div class="col-sm-4 col-md-4">
                            <div class="item">
                                <a href="/cong-trinh-tieu-bieu.htm" class="item_img">
                                    <img src="@item.Avatar" alt="@item.Name">
                                </a>
                                <div class="item_content">
                                    <a href="/cong-trinh-tieu-bieu.htm" class="item_title">
                                        @item.Name
                                    </a>
                                </div>
                            </div>
                        </div>
                    }
                }
            </div>
        </div>
    </div>
</section>
