@model IchiPaint.Models.Products

@{
    ViewBag.Title = Model.ShortName;
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    .img-full img {
        width: unset !important;
        height: 360px !important;
    }
</style>
<div id="main_container">
    <div class="container">
        <div class="page-title" style="margin-top: 45px">
            <h1 class="title"><span>@Model.FullName</span></h1>
        </div>
        @Html.Raw(Model.Detail)
    </div>
</div>
<script>
    $(document).ready(function() {
        //$('#main_container p').removeAttr('style');
        $('#main_container p').css('font-family', 'fs');
        $('#main_container p').css('font-size', '18px');
    });
</script>